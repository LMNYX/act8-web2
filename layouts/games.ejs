<body>
<!--NavBar-->
<%~ includeFile('/layouts/presets/navbar.ejs'); %>
<!--Body-->
<div class="_3block">
	<div class="inside">
		<div class="games">
			<% it.games.forEach(function(game) { %>
			<div class="game_obj" data-id="<%= game.id %>">
				<div class="poster" style="--poster-url: url('/poster/<%= game.id %>');"></div>
			</div>
			<% }) %>

			<% if(it.games.length < 1) { %>
			<h1>Oh...</h1>
			<p>We don't have any games available at the time! Please come back later!</p>
			<% } %>
		</div>
	</div>
</div>
<!--Footer-->
<%~ includeFile('/layouts/presets/footer.ejs'); %>
